create_box = Operation(operation: "CreateBoxGeometry") {
    xSize: 10, ySize: 10, zSize: 5
}
create_box_out = OutputInterface(interface: "out", offset: 0)
create_box -> create_box_out;

split_in = InputInterface(interface: "in", offset: 0)
split = Operation(operation: "Split") {
    axis: "x",
    split_count: 3,
    split_1: 1,
    split_2: 3,
    split_3: 6
}
split_out_1 = OutputInterface(interface: "split_1", offset: 0)
split_out_2 = OutputInterface(interface: "split_2", offset: 0)
split_out_3 = OutputInterface(interface: "split_3", offset: 0)
split_in -> split;
split -> split_out_1;
split -> split_out_2;
split -> split_out_3;

export_geometry_in = InputInterface(interface: "in", offset: 0)
export_geometry = Operation(operation: "ExportGeometry") {
    path: $< "geometry" + op.count + ".obj"; >$
}
export_geometry_in -> export_geometry;

create_box_out -> split_in;
split_out_1 -> export_geometry_in;
split_out_2 -> export_geometry_in;
split_out_3 -> export_geometry_in;
